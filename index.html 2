  <!-- ===========================
       Redirect & click handling
       =========================== -->
  <script>
    (function(){
      // List of URLs to rotate (user-provided)
      const offers = [
        "https://ouo.io/MpgjIn",
        "https://ouo.io/H4ZJlP",
        "https://salvageapplet.com/quqv84cs?key=28e501f07d1d6418681d7696d2c582ee",
        "https://salvageapplet.com/aa3xxq4v?key=0192a9d37380702f389715d5d6f8d4bb",
        "https://salvageapplet.com/e2dcfie5?key=8776e3c8d8299ce3b5771591c0fad8d2",
        "https://www.cpalead.com/en/offers/CPA/win-1m-700-bonus-5542343",
        "https://www.cpalead.com/en/offers/CPA/install-app-achieve-goals-5542573"
      ];

      // If visitor clicks any card button, open that offer immediately in same tab
      document.querySelectorAll('a.btn[data-offer]').forEach(function(el){
        el.addEventListener('click', function(e){
          // allow user action -> open directly
          return; // follow normal link behavior
        });
      });

      // Random redirect after delay (3 seconds as requested)
      const redirectDelay = 3000; // milliseconds
      let tried = 0;
      let order = shuffleArray(offers.slice());

      function shuffleArray(arr){
        for(let i=arr.length-1;i>0;i--){
          const j=Math.floor(Math.random()* (i+1));
          [arr[i],arr[j]]=[arr[j],arr[i]];
        }
        return arr;
      }

      function tryRedirect(index){
        if(index >= order.length){
          // all failed -> show fallback box and link to primary smartlink
          document.getElementById('fallbackBox').style.display = 'block';
          return;
        }
        // Do direct navigation in same tab
        window.location.href = order[index];

        // If navigation fails or is blocked, try next after 2s
        setTimeout(function(){
          // If still on this page after attempting navigation, try next
          // (Some browsers may not set a reliable property — this is a best-effort)
          if(document.visibilityState === 'visible'){
            tryRedirect(index + 1);
          }
        }, 2000);
      }

      // Start automatic redirect after the small delay to allow ads to initialize
      setTimeout(function(){
        tryRedirect(0);
      }, redirectDelay);

      // Retry button in fallback
      document.getElementById('retryBtn').addEventListener('click', function(){
        document.getElementById('fallbackBox').style.display = 'none';
        order = shuffleArray(offers.slice());
        setTimeout(function(){ tryRedirect(0); }, 800);
      });

    })();
  </script>

  <!-- NOTE: Adsterra native widget will auto-render into the container with the provided script above.
